@model AgroMarket.ViewModel.User.UserLoginViewModel;
<link rel="stylesheet" href="~/css/account/login/loginform.css">
<div class="wrapper">
  <form class="form-signin" data-ajax="true" data-ajax-url="@Url.Action("Login","UserApi")" method="post" data-ajax-success="onLoginSuccess" data-ajax-failure="onLoginFailure">
    <h2 class="form-signin-heading text-center">Login Form</h2>
    @Html.TextBoxFor(a => a.MobileNumber, new {@class = "form-control", placeholder = "Mobile Number", required = "required", autofocus = "autofocus"})
    @Html.PasswordFor(a => a.Password, new {@class = "form-control", placeholder = "Password", required = "required"})
    @Html.HiddenFor(a=>a.ReturnUrl)
    <button class="btn btn-lg btn-primary btn-block text-center">Login</button>
  </form>
</div>
<script src="~/js/account/login.js"></script>