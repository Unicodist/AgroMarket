@using System.Security.Claims
@using AgroMarket.Shared.Enum

@{
    if (User.Identity.IsAuthenticated)
    {
        if (User.Claims.SingleOrDefault(x=>x.Type.Equals(ClaimTypes.Role)).Value.Equals(UserType.Farmer.ToString()))
        {
            Layout = "_FarmerLayout";
        }
        Layout = "_CustomerLayout";
    }
    else
    {
        Layout = "_Layout";
    }
    @RenderBody()
}