
<link rel="stylesheet" href="~/css/account/login/loginform.css">
<div class="wrapper">
    <form class="form-signin" data-ajax="true">
        <h2 class="form-signin-heading text-center">Add Product</h2>
        <input type="text" class="form-control" required="required" placeholder="Product Name"/>
        <input type="text" class="form-control" required="required" placeholder="Category"/>
        <input type="text" class="form-control" required="required" placeholder="Stock (IN KG)"/>
        <input type="date" class="form-control" required="required" placeholder="Expiry Date"/><br />
        <input type="file" name="file" class="form-control" accept="image/*" required="required" placeholder="Product Image"/><br />
        <input type="text" class="form-control" required="required" placeholder="Price (IN KG)"/>
        <input type="text" class="form-control" required="required" placeholder="Description"/>
        <button class="btn btn-lg btn-primary btn-block text-center">INSERT</button>
    </form>
  
</div>
